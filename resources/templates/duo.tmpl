<%inherit file="base.tmpl"/>
<%block name="core">
    <head>
      <title>Duo Authentication Prompt</title>
        <meta name='viewport' content='width=device-width, initial-scale=1'>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
    </head>
    <body>
    <div class="row clearfix">
    <div class="col-md-12 column" id="login-header">
       <img src="static/img/Nebraska_N.png" class="navbar-icon">
       <h2>UNIVERSITY OF NEBRASKA</h2>
    </div>
    </div>
      <link rel="stylesheet" type="text/css" href="static/css/Duo-Frame.css">
      <script src="static/js/Duo-Web-v2.min.js"></script>
      <div id="duo">
      <h1>Duo Authentication Prompt</h1>
      <iframe id="duo_iframe"
              title="Two-Factor Authentication"
              frameborder="0"
              data-host=${host}
              data-sig-request=${sig_request}
% if url:
              data-post-action="login?url=${url | u}"
% elif dest:
                action='login?dest=${dest | u}'
% else:
              data-post-action="login"
% endif
      >
       </iframe>
       </div>
    </body>
</%block>
