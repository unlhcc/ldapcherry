## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>
<%block name="core">
<%
if errormsg is None:
    errortxt=''
else:
    errortxt=errormsg
%>
    <div class="row clearfix">
    <div class="col-md-12 column" id="login-header">
       <a href="/"><img src="static/img/Nebraska_N.png" class="navbar-icon"></a>
       <a href="/"><h3>HOME</h3></a>
       <h2>UNIVERSITY OF NEBRASKA</h2>
    </div>
    </div>
    <div class="row clearfix" style="margin-top:30px">
        <div class="col-md-3 column"></div>
        <div class="col-md-6 column well">

            <form method='POST' action='reset' role="form" class="form-signin">
              <div class="form-group">
              <div class="form-signin-heading"><h2>HCC password reset form</h2>
               <span id="reset-text"> You must provide your HCC username and the email associated with your account.
                You will receive an email with a password reset link. </span> <br/>
                </div>
                <div class="input-group">
                    <span class="input-group-addon glyphicon glyphicon-user"></span>
                    <input type="text" class="form-control" name="username" placeholder="HCC Username" required autofocus>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon glyphicon glyphicon-user"></span>
                    <input type="text" class="form-control" name="email" placeholder="Email" required>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <button class="btn btn-default blue" type="submit"><span class="glyphicon glyphicon-off"></span>Reset Password</button>
                </div>
              </div>
            </form>
            <div id="reset-error">${errortxt}</div>
        </div>
        <div class="col-md-3 column"></div>
    </div>

</%block>
